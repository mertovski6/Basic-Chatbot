from flask import Flask, render_template, request, jsonify
import openai
import os

app = Flask(__name__)

# Set up OpenAI API key
openai.api_key = "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"

# Set up log file
log_file = "log.txt"

# Load prompt content from brief.txt
with open("brief.txt", "r", encoding="utf-8") as f:
    prompt = f.read()

# Serve index.html at root endpoint
@app.route('/')
def home():
    return render_template('index.html')

# API endpoint for getting response from OpenAI
@app.route('/get-response', methods=['POST'])
def get_response():
    # Get message from client-side form input
    message = request.json['message']

    # Call OpenAI's GPT-3 API to generate response
    response = openai.Completion.create(
        engine="text-davinci-003",
        prompt=f"{prompt}\n{message}\n",
        temperature=0.6,
        max_tokens=1024,
        top_p=1,
        frequency_penalty=0,
        presence_penalty=0
    )

    # Extract response text from OpenAI API response
    bot_response = response.choices[0].text.strip()

    # Write message and response to log file
    with open(log_file, "a", encoding="utf-8") as f:
        f.write(f"Message: {message}\n")
        f.write(f"Response: {bot_response}\n\n")

    return jsonify({'message': bot_response})

if __name__ == '__main__':
    app.run()
